{
  "expo": {
    "name": "Romingo",
    "slug": "romingo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "romingo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Romenceyi eğlenceli şekilde öğren",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.romingo.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Telaffuz pratiği için mikrofon gerekli",
        "NSMicrophoneUsageDescription": "Sesli alıştırmalar için"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.romingo.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF6B35"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
